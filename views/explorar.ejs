<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Photosphere</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="/styles/explorar.css" rel="stylesheet" />
    <link rel="stylesheet" href="/styles/perfil.css" />
    <link rel="stylesheet" href="/styles/nav-footer.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:400,600|Inter:700"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Header Navigation -->
     <%- include('partials/navbar') %> 

    <!-- Main Content -->
    <main class="main-content">
      <div class="header-text">
        <div class="date" id="current-date"></div>
        <h1>Explorar</h1>
      </div>
      
      <div class="photo-grid" id="photo-grid">
        <% fotos.forEach(foto => { %>
          <div class="photo-card">
            <div class="photo-content" style="background-image: url('<%= foto.url %>')" data-id="<%= foto.id %>">
              <div class="overlay">
                <button class="heart-btn" aria-label="Favoritar" data-id="<%= foto.id %>">
                  <img src="/images/<%= foto.favoritado ? 'heart-filled.png' : 'heart.png' %>" alt="Favoritar" />
                </button>
              </div>
            </div>
            <div class="info">
              <h3><%= foto.titulo %></h3>
              <p><%= foto.descricao %></p>
              <small><%= foto.categorias || 'Sem categoria' %></small>
            </div>
          </div>
        <% }) %>
      </div>
    </main>

    <!-- Back to Top -->
    <div class="back-to-top">
      <img src="/images/check.png" alt="Back to top" />
      <button id="btnVoltarTopo" class="btn btn-secondary">Voltar ao in√≠cio</button>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <script src="/javascripts/explorar.js"></script>
  </body>
</html>
